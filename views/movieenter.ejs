    <div class="content-here">
      <div class="entering-data">
      <h2>Enter a New Film</h2>
        <form method="POST" action="/movie" id="movieForm">

          <input type="hidden" name="db_id" value="<%= themovie._id %>">

          <div class="formfield sides-cat">
            <div class="formfield--prompt">Title</div>
            <input type="text" id="meTitle" name="title" value="<%= themovie.title %>">
          </div>

          <div class="formfield">
            <div class="formfield--prompt">Director</div>
            <input type="text" id="meDirector" name="director"><%= themovie.director %>
          </div>

          <div class="formfield">
            <div class="formfield--prompt">Genre</div>
            <input type="text" id="meGenre" name="genre" value="<%= themovie.genre %>">
          </div>

          <div class="formfield">
            <div class="formfield--prompt">Theater</div>
            <input type="text" id="meTheater" name="theater" value="<%= themovie.theater %>">
          </div>

          <div class="formfield">
            <div class="formfield--prompt">Fellow Moviegoers</div>
            <input type="text" id="meMoviegoers" name="fellow_moviegoers" value="<%= themovie.fellow_moviegoers %>">
          </div>

          <div class="formfield">
            <div class="formfield--prompt">Date Viewed</div>
            <input type="text" id="meDate"
              name="date_seen"
              value="">
          </div>

          <div class="formfield">
            <div class="formfield--prompt">Rating</div>
            <input type="text" id="meRating" name="rating" value="<%= themovie.rating %>">
          </div>

          <div class="formfield">
            <div class="formfield--prompt"></div>
            <input type="checkbox" id="meFavorite" name="favorite"><span class="check-space">Favorite</span>
          </div>

        <input class="submitButton center-it" type="submit"></input>
        </form>
      </div>
    </div>
